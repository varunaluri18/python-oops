class  Bird:
    colour='white'
    
    def __init__(self,name):
        self.name=name
    def fly(self,d):
        self.distance=d
        print('%s is flying '%(self.name,self.distance))
    def shout(self):
        print('%s shout like kou kou kou'%self.name) 
    
    @classmethod
    def tellcolour(cls):
        print('My colour is ',cls.colour)
    @staticmethod
    def warning():
        print('DANGER')
    
b1=Bird('crow')
print(b1.warning())
b1.shout()
print(b1.name)
