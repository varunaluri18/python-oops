class employee1():
    def name(self):
        print("varun is his name")    
    def salary(self):
        print("30000 is his salary")
 
    def age(self):
        print("23 is his age")

a=employee1()
a.name()
a.salary()
a.age()
________________________________________________________________
class employee():
    def __init__(self):   
        self.name = 'varun'
        self.age = 23
        self.salary = 35
        
object1 = employee()
print(object1.name)
print(object1.age)
print(object1.salary)
